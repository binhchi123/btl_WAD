@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
</head>

<body>
    <main>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Learn how to build ASP.NET apps that can run anywhere.
                            <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            There are powerful new features in Visual Studio for building modern web apps.
                            <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/banner3.svg" alt="Microsoft Azure" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
                            <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="container">
            <div class="title">
                <h2>New collection</h2>
                <div class="menu-item">
                    <ul>
                        <li><a href="">Mesh fabric</a></li>
                        <li><a href="">New basic</a></li>
                        <li><a href="">Khuyến mãi</a></li>
                    </ul>
                </div>
            </div>
            <div class="slider mySwiper">
                <div class="image-items swiper-wrapper">
                    @foreach (var product in Model.Mesh)
                     {
                        <div class="image swiper-slide">
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@product.ProductId">
                                <img src="@product.Image" alt="">
                            </a>
                        </div>
                     }
                </div>
                <div class="swiper-button-next arrowButton right"></div>
                <div class="swiper-button-prev arrowButton left"></div>
                <button class="more"><a asp-action="Filter">More</a></button>
            </div>
            <div class="title">
                <h2>Best selling</h2>
                <a href="" class="new">New basic</a>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <img src="~/images/md1.jpg" alt="" class="card-img">
                </div>
                <div class="col-md-3">
                    <div class="w3-card-4" style="width:75%">
                        <img src="~/images/products/pd7.jpg" alt="Alps" style="width:100%">
                        <div class="w3-container w3-center">
                            <p>The Italian / Austrian Alps</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <img src="~/images/md2.jpg" alt="" class="card-img">
                </div>
                <div class="col-md-3">
                    <div class="w3-card-4" style="width:75%">
                        <img src="~/images/products/pd8.jpg" alt="Alps" style="width:100%">
                        <div class="w3-container w3-center">
                            <p>The Italian / Austrian Alps</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="banner-pd row">
                <div class="col-md-4 home-banner">
                    <div class="img">
                        <img src="~/images/home-banner1.jpg" alt="" class="card-img">
                    </div>
                    <div class="text">
                        <a href="">Authentic</a>
                        <p>Những sản phẩm chất lượng với độ bền cao là tiêu chí hàng đầu của BAMA.</p>
                    </div>
                </div>
                <div class="col-md-4 home-banner">
                    <div class="img">
                        <img src="~/images/home-banner2.jpg" alt="" class="card-img">
                    </div>
                    <div class="text">
                        <a href="">Casual Vibes</a>
                        <p>Thoải mái, tự tin trước mọi niềm vui trong cuộc sống.</p>
                    </div>
                </div>
                <div class="col-md-4 home-banner">
                    <div class="img">
                        <img src="~/images/home-banner3.jpg" alt="" class="card-img">
                    </div>
                    <div class="text">
                        <a href="">Mesh fabric: Try to shine</a>
                        <p>Tỏa sáng theo cách riêng của bạn với sự sáng tạo của bản thân.</p>
                    </div>
                </div>
            </div>
            <div class="title">
                <h2>Featured product</h2>
                <a href="" class="mesh">Mesh fabric</a>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <img src="~/images/md3.jpg" alt="">
                </div>
                <div class="col-md-6">
                    <div class="w3-card-4" style="width:75%">
                        <img src="~/images/products/pd9.jpg" alt="Alps" style="width:100%">
                        <div class="w3-container w3-center">
                            <p>The Italian / Austrian Alps</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="title">
                <h2>New arrivals</h2>
            </div>
            <div class="slider mySwiper">
                <div class="image-items swiper-wrapper">
                    @foreach (var product in Model.Arrivals)
                     {
                     <div class="image swiper-slide">
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@product.ProductId">
                            <img src="@product.Image" alt="">
                        </a>
                     </div>
                     }
                </div>
                <div class="swiper-button-next arrowButton right"></div>
                <div class="swiper-button-prev arrowButton left"></div>
                <button class="more"><a asp-action="Filter">More</a></button>
            </div>
