@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/register.css" rel="stylesheet" />
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <h1>Tạo tài khoản</h1>
                <div class="gach"></div>
            </div>
            <div class="col-lg-5 form">
                <form action="">
                    <div class="form-group">
                        <input type="text" name="" id="" class="form-control" placeholder="Họ" aria-describedby="helpId">
                    </div>
                    <div class="form-group">
                        <input type="text" name="" id="" class="form-control" placeholder="Tên" aria-describedby="helpId">
                    </div>
                    <div class="form-group">
                        <input type="email" name="" id="" class="form-control" placeholder="Email"
                               aria-describedby="helpId">
                    </div>
                    <div class="form-group">
                        <input type="password" name="" id="" class="form-control" placeholder="Mật khẩu"
                               aria-describedby="helpId">
                    </div>
                    <button type="submit" class="reg">Đăng ký</button>
                </form>
                <div class="regis">
                    <a asp-controller="Home" asp-action="Index"><i class="fa-solid fa-left-long mr-2"></i>Quay lại trang chủ</a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>